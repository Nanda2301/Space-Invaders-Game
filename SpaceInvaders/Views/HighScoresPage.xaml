<Page x:Class="SpaceInvaders.Views.HighScoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000011">

    <Grid>
        <!-- Background -->
        <Rectangle Fill="#000022"/>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="25"
                    Width="500">

            <!-- Title -->
            <TextBlock Text="HIGH SCORES"
                       FontSize="36"
                       Foreground="#FFFF00"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontFamily="Consolas"
                       Margin="0,0,0,20"/>

            <!-- Scores List -->
            <Border Background="#80000000"
                    BorderBrush="#FFFF00"
                    BorderThickness="2"
                    Padding="20"
                    CornerRadius="5">

                <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="ScoresContainer" Spacing="10">
                        <!-- Header -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="#" Grid.Column="0"
                                      Foreground="#FFFF00" FontWeight="Bold"/>
                            <TextBlock Text="PLAYER" Grid.Column="1"
                                      Foreground="#FFFF00" FontWeight="Bold"/>
                            <TextBlock Text="SCORE" Grid.Column="2"
                                      Foreground="#FFFF00" FontWeight="Bold"
                                      HorizontalAlignment="Right"/>
                            <TextBlock Text="DATE" Grid.Column="3"
                                      Foreground="#FFFF00" FontWeight="Bold"
                                      HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Scores will be added programmatically -->
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- No scores message -->
            <TextBlock x:Name="NoScoresText"
                       Text="No high scores yet! Play a game to set a record."
                       Foreground="#AAAAAA"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"/>

            <!-- Back Button -->
            <Button Content="BACK TO MENU"
                    Click="BackButton_Click"
                    Width="200"
                    Height="50"
                    FontSize="16"
                    Background="#006400"
                    Foreground="#FFFFFF"
                    BorderBrush="#00FF00"
                    FontFamily="Consolas"
                    Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</Page>
