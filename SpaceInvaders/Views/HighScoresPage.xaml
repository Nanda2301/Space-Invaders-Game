<Page x:Class="SpaceInvaders.Views.HighScoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:converters="using:SpaceInvaders.Views.Converters"
      Background="#000000">

    <Page.Resources>
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
    </Page.Resources>

    <Grid>
        <Image Source="/Assets/Images/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <TextBlock Text="MELHORES PONTUAÇÕES" FontSize="32" Foreground="#FFFF00"
                       HorizontalAlignment="Center" FontWeight="Bold"/>

            <ListView ItemsSource="{Binding HighScores}" Width="400" Height="300" Background="#80000000">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding PlayerName}" Foreground="#FFFF"
                                       FontSize="16" Grid.Column="0" Margin="10,0"/>
                            <TextBlock Text="{Binding Score, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0}'}"
                                       Foreground="#FFFF" FontSize="16" Grid.Column="2" Margin="10,0"/>
                            <TextBlock Text="{Binding Date, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:dd/MM/yy}'}"
                                       Foreground="#D3D3D3" FontSize="14" Grid.Column="3" Margin="10,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Voltar ao Menu" Command="{Binding MainMenuCommand}"
                    Width="200" Height="40" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>
