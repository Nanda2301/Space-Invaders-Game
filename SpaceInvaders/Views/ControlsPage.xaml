<Page x:Class="SpaceInvaders.Views.ControlsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000000"
      KeyDown="Page_KeyDown"
      Loaded="Page_Loaded"
      IsTabStop="True">

    <Grid>
        <Image Source="/Assets/Images/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>

        <ScrollViewer>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" Margin="20">
                <TextBlock Text="CONTROLES DO JOGO" FontSize="32" Foreground="#00FFFF"
                           HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Consolas"/>

                <StackPanel Background="#80000000" Padding="20" Spacing="12" CornerRadius="8">
                    <TextBlock Text="CONTROLES DE MOVIMENTO" Foreground="#FFFF00" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Setas ← → : Mover sua nave" Foreground="#FFFFFF" FontSize="16"/>
                    <TextBlock Text="ESPACO: Atirar lasers" Foreground="#FFFFFF" FontSize="16"/>

                    <Rectangle Height="1" Fill="#333333" Margin="0,8"/>
                </StackPanel>

                <StackPanel Background="#80000000" Padding="20" Spacing="12" CornerRadius="8">
                    <TextBlock Text="REGRAS DO JOGO" Foreground="#FF6600" FontSize="18" FontWeight="Bold"/>

                    <TextBlock Text="OBJETIVO:" Foreground="#FFFF00" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="• Destruir todos os invasores inimigos para avançar ao próximo nível" Foreground="#FFFFFF" FontSize="14"/>
                    <TextBlock Text="• Evitar tiros inimigos e impedir que os invasores alcancem o fundo" Foreground="#FFFFFF" FontSize="14"/>

                    <Rectangle Height="1" Fill="#333333" Margin="0,8"/>

                    <TextBlock Text="PONTUAÇÃO:" Foreground="#FFFF00" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="• Invasores azuis (linha superior): 40 pontos cada" Foreground="#FFFFFF" FontSize="14"/>
                    <TextBlock Text="• Invasores verde (linhas do meio): 30 pontos cada" Foreground="#FFFFFF" FontSize="14"/>
                    <TextBlock Text="• Invasores amarelos (linhas inferiores): 10 pontos cada" Foreground="#FFFFFF" FontSize="14"/>
                    <TextBlock Text="• Invasor especial vermelho: 200 pontos (aparece a cada 30 segundos)" Foreground="#FF0000" FontSize="14"/>

                    <Rectangle Height="1" Fill="#333333" Margin="0,8"/>

                    <TextBlock Text="RECURSOS ESPECIAIS:" Foreground="#FFFF00" FontSize="14" FontWeight="Bold"/>
                    <TextBlock Text="• Ganhe uma vida extra a cada 1000 pontos (máximo de 6 vidas)" Foreground="#00FF00" FontSize="14"/>
                    <TextBlock Text="• Use escudos verdes para proteção (eles se desgastam com danos)" Foreground="#00FF00" FontSize="14"/>
                    <TextBlock Text="• A velocidade inimiga aumenta conforme você elimina mais invasores" Foreground="#FFFFFF" FontSize="14"/>
                    <TextBlock Text="• Apenas invasores médios podem atirar de volta em você" Foreground="#FFFFFF" FontSize="14"/>
                </StackPanel>

                <StackPanel Background="#80000000" Padding="20" Spacing="12" CornerRadius="8">
                    <TextBlock Text="CONDIÇÕES DE FIM DE JOGO:" Foreground="#FF0000" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="• Todas as suas vidas foram perdidas" Foreground="#FFFFFF" FontSize="14"/>
                    <TextBlock Text="• Invasores inimigos alcançam sua nave" Foreground="#FFFFFF" FontSize="14"/>
                </StackPanel>

                <Button Content="VOLTAR AO MENU PRINCIPAL"
                        Click="BackButton_Click"
                        Width="280" Height="50"
                        FontSize="16"
                        Background="#006400"
                        Foreground="#FFFFFF"
                        BorderBrush="#00FF00"
                        FontFamily="Consolas"
                        CornerRadius="8"
                        Margin="0,20,0,0"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
