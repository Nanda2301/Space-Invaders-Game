<Page x:Class="SpaceInvaders.Views.ControlsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000000">

    <Grid>
        <Image Source="/Assets/Images/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>

        <ScrollViewer>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" Margin="20">
                <TextBlock Text="CONTROLES DO JOGO" FontSize="32" Foreground="#00FFFF"
                           HorizontalAlignment="Center" FontWeight="Bold"/>

                <StackPanel Background="#80000000" Padding="20" Spacing="10">
                    <TextBlock Text="► Setas Esquerda/Direita: Movimentar a nave" Foreground="#FFFFFF" FontSize="18"/>
                    <TextBlock Text="► Espaço: Atirar" Foreground="#FFFFFF" FontSize="18"/>
                    <TextBlock Text="► P: Pausar/Continuar o jogo" Foreground="#FFFFFF" FontSize="18"/>
                    <TextBlock Text="► ESC: Voltar ao menu principal" Foreground="#FFFFFF" FontSize="18"/>
                </StackPanel>

                <StackPanel Background="#80000000" Padding="20" Spacing="10">
                    <TextBlock Text="REGRAS DO JOGO" Foreground="#FFFF00" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="► Destrua todas as naves inimigas para avançar de nível" Foreground="#FFFFFF" FontSize="16"/>
                    <TextBlock Text="► Cada tipo de nave vale pontos diferentes" Foreground="#FFFFFF" FontSize="16"/>
                    <TextBlock Text="► A nave vermelha aparece periodicamente e vale 100 pontos" Foreground="#FFFFFF" FontSize="16"/>
                    <TextBlock Text="► Ganhe uma vida extra a cada 1000 pontos (máximo 6 vidas)" Foreground="#FFFFFF" FontSize="16"/>
                    <TextBlock Text="► Use os blocos verdes para se proteger dos tiros inimigos" Foreground="#FFFFFF" FontSize="16"/>
                    <TextBlock Text="► O jogo termina se os inimigos chegarem até você ou suas vidas acabarem" Foreground="#FFFFFF" FontSize="16"/>
                </StackPanel>

                <Button Content="Voltar ao Menu" Command="{Binding MainMenuCommand}"
                        Width="200" Height="40" HorizontalAlignment="Center"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
