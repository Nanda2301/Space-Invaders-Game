<Page x:Class="SpaceInvaders.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000000">

    <Grid>
        <Image Source="/Assets/Images/background.jpg" Stretch="UniformToFill" Opacity="0.3"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
            <TextBlock Text="SPACE INVADERS" FontSize="48" Foreground="#008000"
                       HorizontalAlignment="Center" FontWeight="Bold"/>

            <Button Content="Iniciar Novo Jogo" Command="{Binding StartNewGameCommand}"
                    Width="200" Height="60" FontSize="18" Background="#006400" Foreground="#fff"
                    IsEnabled="{Binding CanStartGame}"/>

            <Button Content="Tabela de Placares" Command="{Binding ShowHighScoresCommand}"
                    Width="200" Height="60" FontSize="18" Background="#00008B" Foreground="#fff"/>

            <Button Content="Controles do Jogo" Command="{Binding ShowControlsCommand}"
                    Width="200" Height="60" FontSize="18" Background="#8B0000" Foreground="#fff"/>

            <Button Content="Sair" Command="{Binding ExitCommand}"
                    Width="200" Height="60" FontSize="18" Background="#A9A9A9" Foreground="#fff"/>

            <!-- Status do jogo -->
            <TextBlock Text="{Binding GameStatus}" Foreground="#FFFFFF" FontSize="16"
                       HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
