<Page x:Class="SpaceInvaders.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#000011">

    <Grid>
        <!-- Background -->
        <Rectangle Fill="#000022" />

        <!-- Animated stars background -->
        <Canvas x:Name="StarsCanvas" />

        <!-- Main Menu -->
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="25"
                    Width="300">

            <!-- Title -->
            <TextBlock Text="SPACE INVADERS"
                       FontSize="42"
                       Foreground="#00FF00"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       FontFamily="Consolas"
                       Margin="0,0,0,30"/>

            <!-- Menu Buttons -->
            <Button Content="START NEW GAME"
                    Click="StartNewGameButton_Click"
                    Width="280"
                    Height="50"
                    FontSize="16"
                    Background="#006400"
                    Foreground="#FFFFFF"
                    BorderBrush="#00FF00"
                    FontFamily="Consolas"/>

            <Button Content="HIGH SCORES"
                    Click="HighScoresButton_Click"
                    Width="280"
                    Height="50"
                    FontSize="16"
                    Background="#00008B"
                    Foreground="#FFFFFF"
                    BorderBrush="#0000FF"
                    FontFamily="Consolas"/>

            <Button Content="CONTROLS"
                    Click="ControlsButton_Click"
                    Width="280"
                    Height="50"
                    FontSize="16"
                    Background="#8B0000"
                    Foreground="#FFFFFF"
                    BorderBrush="#FF0000"
                    FontFamily="Consolas"/>

        </StackPanel>

        <!-- Instructions -->
        <StackPanel VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="20">
            <TextBlock Text="Use ← → to move, SPACE to shoot"
                       Foreground="#AAAAAA"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Page>
